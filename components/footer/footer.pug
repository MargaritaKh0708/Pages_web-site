include ./footer-list
include ../header/social-btn

-const exploreList = ['Home', 'About', 'Articles', 'Our Store', 'Contact Us']
-const utilityList = ['Style Guide', '404 Not Found', 'Password Protected', 'Licenses', 'Changelog']



mixin footer-block
    footer.footer 
        .footer__inner.container
            .footer__content  
                .socials 
                    .logo 
                        img(src='./assets/images/icons/logo.svg' alt='pages')
                    .footer__socials-list
                        +social-btn('./assets/images/icons/facebook.svg')(class='social-btn__footer')
                        +social-btn('./assets/images/icons/twitter.svg')(class='social-btn__footer') 
                        +social-btn('./assets/images/icons/link.svg')(class='social-btn__footer') 
                        +social-btn('./assets/images/icons/insta.svg')(class='social-btn__footer')
                +footer-list('Explore', exploreList)
                +footer-list('Utility Pages', utilityList)
                .footer-list.footer-list--align
                    .footer-list__title Keep in Touch
                    p.contacts__item Address : 
                        span.contacts__subtext 24A Kingston St, Los Vegas NC 28202, USA.
                    p.contacts__item Mail : 
                        a(ref = 'mailto: support@pages.com').contacts__subtext support@pages.com
                    p.contacts__item Phone : 
                        a(href='tel:(+22)123-4567-900').contacts__subtext (+22) 123 - 4567 - 900
